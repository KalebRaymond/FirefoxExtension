{


	"manifest_version": 2,
  
	"name": "__German_Word_Translator__",
  
	"description": "__GWT_Description__",
  "version": "1.0",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "strict_min_version": "56.0a1"
    }
  },

  "background": {
	"scripts": ["background.js"]
  },
  
  "permissions": [
    "menus",
	"activeTab",
	"notifications"
  ],
  
  "browser_action": {
    "default_icon": {
     "32" : "icons/flag-32.png"
    },
    "default_title": "GWT",
    "default_popup": "popup/popup.html"
  },
  
  "icons": {
    "16": "icons/flag-16.png",
    "32": "icons/flag-32.png",
    "48": "icons/flag-48.png"
  }

}
